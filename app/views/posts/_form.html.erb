<div class="title">
  <%= form.label :title %>
  <%= form.text_field :title, placeholder: "タイトルを入力しましょう" ,class: "title-text" %>
</div>
<div class="text">
  <%= form.label :content %>
  <%= form.text_area :content,placeholder: "本文を入力してください" %>
</div>
<div class="image">
  <%= form.label :image %>
  <%= form.file_field :image %>
</div>
<div class="submit">
  <%=form.submit class:"btn"%>
</div>