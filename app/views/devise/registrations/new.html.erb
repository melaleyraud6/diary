
<div class="registration-contents"> 
  <div class="registration-content">
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
      <div class="field">
        <%= f.label :name %><em>(8文字以内)</em>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "sign-form" %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "sign-form" %>
      </div>

      <div class="field">
        <%= f.label :password %><em>(6文字以上)</em> 
        <%= f.password_field :password, autocomplete: "new-password",class: "sign-form" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "sign-form" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
